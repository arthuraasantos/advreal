<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Adv Real</title>

    <!-- Dependencias CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/advReal.css" crossorigin="anonymous">

    <!-- Dependencias JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.9/js/all.js" integrity="sha384-8iPTk2s/jMVj81dnzb/iFR2sdA7u06vHJyyLlAd4snFpCl/SnyUjRrbdJsw1pGIl" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-primary">
        <a class="navbar-brand adv-text-white" href="~/Escritorio/Inicio">Adv Real</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link adv-text-white" href="~/Escritorio/Inicio">Início</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle adv-text-white" href="~/Escritorio/Agenda" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Escritório
                    </a>
                    <div class="dropdown-menu mr-sm-2" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="~/Escritorio/Agenda">Agenda</a>
                        <a class="dropdown-item" href="~/Escritorio/Tarefas">Tarefas</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link adv-text-white" href="~/Cliente/Lista">Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link adv-text-white" href="~/Processo/Lista">Processos</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Buscar...">
                            <span class="input-group-btn">
                                <button class="btn btn-outline-seconday" style="border-top-left-radius: 1px; border-bottom-left-radius: 1px;" type="button">
                                    <span>
                                        <i class="fa fa-search"></i>
                                    </span>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </form>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle adv-dropdown-item adv-text-white" href="~/Processo/Detalhe" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="fa-layers fa-fw fa-2x">
                            <i class="fas fa-envelope"></i>
                            <span class="fa-layers-counter fa-2x counter-badge">3</span>
                        </span>
                    </a>
                    <div class="dropdown-menu mr-sm-2 adv-dropdown-item" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="~/Processo/Detalhe">
                            <i class="fas fa-circle fa-xs text-warning"></i>
                            Novo processo atribuído para você
                        </a>
                        <a class="dropdown-item" href="~/Processo/Detalhe">
                            <i class="fas fa-circle fa-xs text-info"></i>
                            Processo HCC(20180001) foi alterado
                        </a>
                        <a class="dropdown-item" href="~/Processo/Detalhe">
                            <i class="fas fa-check fa-xs text-success"></i>
                            Processo HCC foi modificado
                        </a>
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle adv-dropdown-item adv-text-white" href="~/Processo/Detalhe" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="fa-layers fa-fw fa-2x">
                            <i class="fas fa-user-circle"></i>
                        </span>
                    </a>
                    <div class="dropdown-menu mr-sm-2 adv-dropdown-item" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="~/Usuario/Perfil">
                            Minhas informações
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="~/Escritorio/Perfil">
                            <i class="fas fa-briefcase"></i>
                            Configurar escritório
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fas fa-sign-out-alt"></i>
                            Sair
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container container-body">
        @RenderBody()
    </div>
    <footer class="footer text-muted">
        <div class="row-fluid">&nbsp;</div>
        
        <div class="container">
            <p class="text-secondary text-center">© Adv Real. Todos os direitos reservados - 2018 </p>

        </div>
    </footer>
</body>
</html>
