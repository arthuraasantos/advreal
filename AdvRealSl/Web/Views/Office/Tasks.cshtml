
@{
    Layout = "~/Views/Base/_Layout.cshtml";
}

<div class="container pd-top-default">
    <h2>Tarefas do escritório</h2>
    <div class="row">
        <form class="form-inline my-2 my-lg-0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Digite sua tarefa...">
                        <span class="input-group-btn">
                            <button class="btn btn-outline-seconday" style="border-top-left-radius: 1px; border-bottom-left-radius: 1px;" type="button">
                                <span>
                                    <i class="fas fa-plus"></i>
                                </span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </form>
        <br />
    </div>
    <div class="clearfix" style="height: 2px;">&nbsp;</div>
    <div class="row">
        <div id="accordion" class="adv-body-full">
