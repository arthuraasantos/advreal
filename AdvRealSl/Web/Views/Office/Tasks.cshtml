                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix">&nbsp;</div>



<script>
    $(function () {


        $(".tarefasCheckbox").on("click", function () { 
            var el = $(this);
            var isChecked = el.prop('checked');
            if (isChecked) {
                var indice = el[0].id.slice(-1);
                //var td = $(".tarefas-descricao" + indice);
                //td.html('<span style="text-decoration: line-through;">' + td.html() + '</span>');
                $(".tarefa-descricao" + indice).html('<span style="text-decoration: line-through;">' + $(".tarefa-descricao" + indice).html() + '</span>');
                $(".tarefa-btn"+indice).attr('disabled',true);
            }

        })
       

    });
</script>