                                <td colspan="1">
                                    <a href="#" class="btn btn-primary btn-sm" title="Enviar por email para o cliente do processo">
                                        <i class="fa fa-envelope"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile04">
                        <label class="custom-file-label" for="inputGroupFile04">Vincular arquivos</label>
                    </div>
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">Enviar arquivo</button>
                    </div>
