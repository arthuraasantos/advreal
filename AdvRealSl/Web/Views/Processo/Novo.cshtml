
@{
    Layout = "~/Views/Base/_Layout.cshtml";
}

<div class="container pd-top-default">
    <form>
        <div class="row">
            <h3 class="font-weight-light">Dados principais</h3>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="cliente">Cliente</label>
                <select class="form-control" id="cliente_id">
                    <option>Selecione...</option>
                    <option value="00001">José Bonifácio</option>
                    <option value="00002">Luiz Fernando</option>
                    <option value="00003">Angela Maria</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="parte_contraria">Parte contrária</label>
                <input type="text" class="form-control" id="parte_contraria">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="identificar">Número processo CNJ</label>
                <input type="text" class="form-control" id="identificador">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="responsavel">Responsável</label>
                <select class="form-control" id="responsavel_id">
                    <option>Selecione...</option>
                    <option value="00001">Paulo Cezar</option>
                    <option value="00002">Fernando Medeiros</option>
                    <option value="00003">Carmem</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="status_andamento">Andamento do processo</label>
                <select class="form-control" id="cliente_id">
                    <option value="0" selected>Novo</option>
                    <option value="1">Aguardando análise</option>
                    <option value="2">Aguardando julgamento</option>
                    <option value="3">Aguardando pagamento</option>
                    <option value="4">Aguardando recebimento</option>
                    <option value="5">Concluídos</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="anotacoes">Anotações</label>
                <textarea class="form-control" rows="5" placeholder="Digite suas anotações aqui..."></textarea>
            </div>
        </div>

        <hr />
        <div class="form-group">
            <table>
                <tbody>
                    <tr>
                        <td>Nenhum arquivo vinculado</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="form-group input-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile04">
                <label class="custom-file-label" for="inputGroupFile04">Vincular arquivos</label>
            </div>
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">Enviar arquivo</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary float-right">Registrar</button>
            </div>
        </div>
        <br />
    </form>
</div>
